{
  "name": "riza-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for riza.io",
  "private": true,
  "type": "module",
  "bin": {
    "riza-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@riza-io/api": "^0.3.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3"
  }
}
